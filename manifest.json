{
  "manifest_version": 3,
  "name": "Character Based Chrome Extension",
  "version": "1.0",
  "description": "A Chrome extension with a character sprite and task management",
  "action": {
    "default_icon": {
      "16": "icon_disabled.png",
      "48": "icon_disabled.png",
      "128": "icon_disabled.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "host_permissions": ["<all_urls>"],
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage",
    "notifications",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  }
} 